<div id="banner">
  <h1>Articles</h1>
  <a href="/articles/new">Add New Article</a>
</div>
{{#each articles}}
<div class="article-title">
  <h2>{{title}}</h2>
  <h6>{{author}}</h6>
  <a href="/articles/{{title}}">Visit</a>
</div>
{{/each}}
{{#unless articles}}
<div class="article-title">
  <p>No articles available</p>
</div>
{{/unless}}