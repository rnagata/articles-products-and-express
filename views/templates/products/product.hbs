<div>
  <h1>{{product.name}}</h1>
  <h3>{{product.id}}</h3>
  <ul>
    <li>${{product.price}}</li>
    <li>Stock: {{product.inventory}}</li>
  </ul>
</div>
<div>
  <a href="{{product.id}}/edit">Edit Existing Product</a>
  <form action="/products/{{product.id}}?_method=DELETE" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <div class="button">
      <button type="submit">Delete Product</button>
    </div>
  </form>
  <a href="/products/">Go Back</a>
</div>